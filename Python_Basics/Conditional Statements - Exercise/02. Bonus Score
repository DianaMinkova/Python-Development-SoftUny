number = int(input())
bonus = 0

if number >= 1000:    # най- много проверки и пороменливи, затова започваме първо с него
    bonus = number * 0.10
elif number <= 100:
    bonus += 5     # същото bonus=bonus+5
else:
    bonus = number * 0.20

if number % 2 == 0:
    bonus += 1
elif number % 10 == 5:
    bonus += 2

print(bonus)
print(bonus + number)
